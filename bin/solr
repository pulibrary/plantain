#!/usr/bin/env ruby
APP_ROOT = File.expand_path('..', __dir__)
require 'byebug'
Dir.chdir(APP_ROOT) do
  begin
    system("lando", *ARGV)
    if ARGV.first.downcase == "start"
      system("RAILS_ENV=test rake pulfalight:seed")
    end
  rescue Errno::ENOENT
    $stderr.puts "Lando executable was not detected in the system."
    $stderr.puts "Download Lando at https://github.com/lando/lando/releases"
    exit 1
  end
end
